<h1>New Restaurant</h1>

<%= form_with model: @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :location %>
  <%= f.text_field :location %><br><br>

  <%= f.label :owner_name %>
  <%= f.select :user_id, User.owner.collect { |p| [ p.firstname, p.id ] }, include_blank: true  %><br><br>

  <%= f.label :image %>
  <%= f.file_field :image %><br><br>
  <%= f.submit  %>
<% end %>

<%= link_to 'Back', restaurants_path %>