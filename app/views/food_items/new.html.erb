<div class="text-center">
<h1>New FoodItem</h1>
</div>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
<%= form_with model: [ @restaurant, @restaurant.food_items.build ] do |f| %>
  <div class="mb-3">
  <%= f.label :name, class: 'form-label' %>
  <%= f.text_field :name, class: 'form-control'  %>
  </div>

  <div class="mb-3">
  <%= f.label :price, class: 'form-label' %>
  <%= f.text_field :price, class: 'form-control'  %>
  </div>

  <div class="mb-3">
  <%= f.label :ingredients , class: 'form-label'%>
  <%= f.text_field :ingredients, class: 'form-control'  %>
 </div>

  <div class="mb-3">
  <%= f.label :image , class: 'form-label'%>
  <%= f.file_field :image, class: 'form-control'  %>
  </div>

  <div class="mb-3">
  <%= f.submit 'Create FoodItem', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', restaurant_food_items_path, class: 'btn btn-secondary' %>
</div>
</div>
</div>
